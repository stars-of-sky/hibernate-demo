<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.yrp.hibernate.bean">
    <class name="Student">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="sex"/>
        <property name="age"/>

        <!--配置多对多时候，set一定要有一个中间table-->
        <set name="courses" table="studnet_course_rel">
            <!--当前student主键放到中间列表里-->
            <key column="student_id"></key>
            <!--关联另一方的course，及其主键-->
            <many-to-many class="com.yrp.hibernate.bean.Course" column="course_id"></many-to-many>
        </set>

    </class>
</hibernate-mapping>